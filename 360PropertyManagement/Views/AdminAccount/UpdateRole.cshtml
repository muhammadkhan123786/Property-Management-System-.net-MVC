@model _360PropertyManagement.Models.Accounts
@using _360PropertyManagement.Models;

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MySite.css" rel="stylesheet" />

@{
    ViewBag.Title = "UpdateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_Menus")
</div>
<div style="margin-top:130px;">
    @using (Html.BeginForm("UpdateRole", "AdminAccount",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="main-wrap3" style="margin-top:50px;">
            <div class="reset-head" style="background-color:black;">Change Role</div>
            <div class="form-group">
                @Html.LabelFor(m => m.role, "", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("roleid")
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.role.RoleName)
                </div>
                <div style="width:70px; height:5px;"></div>
                <b style="padding-top:10px;">Please Select Role.</b>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="button" value="Update" />
                </div>

            </div>
        </div>

    </div>

    }

</div>
