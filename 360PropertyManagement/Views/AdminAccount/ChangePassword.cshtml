@model _360PropertyManagement.ViewModels.ChangePasswordViewmodel
@using _360PropertyManagement.Models;

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MySite.css" rel="stylesheet" />
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_Menus")
</div>
<div style="margin-top:130px;">
    @using (Html.BeginForm("ChangePassword", "AdminAccount",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="main-wrap" style="margin-top:70px;">
            <div class="reset-head1">Change Password</div>

            <div class="child-main1">
                @Html.HiddenFor(x => x.AccountId)
                <div class="form-group">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    New Password*
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.NewPassword)
                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    Repeat Password*
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.RepeatPassword)
                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.RepeatPassword, "New Password and Repeat Password not match")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="button">Update</button>
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "button" })
                    </div>
                </div>

            </div>

            <div class="child-main">
                By having a password you will have access to My ads where you can: <br /> <br />
                Edit or Delete your Ads<br />
                Check responses for your Ads<br />
                See saved Ads<br /><br />
                Provide your e-mail address & password and click confirm link in e-mail which will be sent to you..
            </div>

        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>











