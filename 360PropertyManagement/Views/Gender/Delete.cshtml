
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:-50px;">
    @Html.Partial("_Menus")
</div>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <ul class="entry_panel" style="width: 500px; margin-top:50px">
        <li>
            <h3>Delete Gender</h3><h2>@ViewBag.GenderName</h2>
        </li>
        <li>
            <h4>Are you sure you want to delete this Gender?</h4>
        </li>
        <li>
            <button class="button" type="submit">Yes</button>
            @Html.ActionLink("No", "Index", null, new { @class = "button" })
        </li>
    </ul>
}