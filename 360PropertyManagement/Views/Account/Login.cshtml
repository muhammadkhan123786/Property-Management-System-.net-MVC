@model _360PropertyManagement.ViewModels.LoginViewModel
@using _360PropertyManagement.Models;
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menudiv" style="margin-top:70px;">
    @Html.Partial("_PublicMenus")
</div>
<div style="margin-top:120px;">
    
    @using (Html.BeginForm("Login", "Account",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()


        <div class="main-wrap1" style="margin-top:0px;">
            <div class="reset-head" style="background-color:black;">Login account.</div>
            @Html.ValidationSummary()
            <div class="formdesign">

                <div class="form-group" style="text-align:left !important; margin-left:27px;">
                    Your Email*
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.EmailId)
                </div>
            </div>
            <div class="form-group" style="text-align: left !important; margin-left: 27px;">
                Password*
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div style="font-size:medium;">
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div class="form-group" style="text-align: left !important; margin-left: 27px;">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="button">Login</button>
                </div>
                <div>


                </div>


            </div>

            <div class="main-wrap2">

                <div style="float:left;">
                    @Html.ActionLink("Forget Password", "ForgetPassword", "Account")
                </div>
                <div style="float:right; padding-right:50px;">
                    @Html.ActionLink("New User? Register Here", "Register", "Account")
                </div>
            </div>

            <div style="margin-left:12px;">Manage your Account through email and password.</div>
            <div style="margin-left:9px;">@Html.ActionLink("Resend confirmation link", "ConfirmationLink", "Account", routeValues: null, htmlAttributes: new { id = "ConfirmationLink" })   </div>
        </div>
    </div>

    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
