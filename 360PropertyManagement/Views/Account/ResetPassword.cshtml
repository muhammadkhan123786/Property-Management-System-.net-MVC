@model _360PropertyManagement.ViewModels.PasswordResetViewModel
@using _360PropertyManagement.Models;
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_PublicMenus")
</div>
<div style="margin-top:130px;">
    @using (Html.BeginForm("ResetPassword", "Account",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="main-resetpassword" style="margin-top:10px;">

            <div class="reset-head" style="background-color:black;">Reset Password</div>

            <div class="formdesign">
                <div class="form-group">
                    <div>
                        @Html.HiddenFor(x => x.AccountEmailId)
                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.AccountEmailId, "You didn't fill up form to forget password")
                    </div>

                </div>
                <div class="form-group" style="text-align: left !important; margin-left: 27px;">
                    New Password*
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.AccountPassword, new { @class = "form-control" })

                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.AccountPassword)
                    </div>
                </div>
                <div class="form-group" style="text-align: left !important; margin-left: 27px;">
                    Repeat Password*
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.AccountConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div style="font-size:medium;">
                        @Html.ValidationMessageFor(x => x.AccountPassword, "Please Enter Repeat Password")
                    </div>
                </div>
                <div class="form-group" style="text-align: left !important; margin-left: 27px;">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="button">Update</button>
                    </div>
                </div>

            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>