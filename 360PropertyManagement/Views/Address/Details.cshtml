@model _360PropertyManagement.ViewModels.AddressViewModel
@using _360PropertyManagement.Models;

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MySite.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_Menus")
</div>
@{
    var db=new Context();
    var person=db.addresses.Where(x=>x.AddressId==Model.id).SingleOrDefault();
}
<div style="margin-top:130px;">

    <div>
        <div style="background-color:black; color:white;">Person Name </div>
        <div style="font-family:Georgia; text-decoration:solid;">@person.person.PersonFullName</div><br />
        <div style="background-color:black; color:white;">Address One </div>
        <div style="font-family:Georgia; text-decoration:solid;">@Html.DisplayFor(x => x.AddressOne)</div><br />
        <div style="background-color:black; color:white;">Address Two </div>
        <div style="font-family:Georgia; text-decoration:solid;">@Html.DisplayFor(x => x.AddressTwo)</div><br />
        <div style="background-color:black; color:white;">Country </div>
        <div style="font-family:Georgia; text-decoration:solid;">@person.country.CountryName</div><br />
        <div style="background-color:black; color:white;">State </div>
        <div style="font-family:Georgia; text-decoration:solid;">@person.state.StateName</div><br />
        <div style="background-color:black; color:white;">City </div>
        <div style="font-family:Georgia; text-decoration:solid;">@person.city.CityName</div>
        <div style="margin-left:100px;">
            @Html.ActionLink("Edit Address", "EditAddress", new { id = Model.id }, new { @class = "button" })
            @Html.ActionLink("Back", "Index", null, new { @class = "button" })
        </div>

    </div>

</div>