@model _360PropertyManagement.ViewModels.OccupationViewModel
@using _360PropertyManagement.Models;

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MySite.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />
@{
    ViewBag.Title = "Add Occupation";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@{
    var db = new Context();

}

<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_Menus")
</div>
<div style="margin-top:130px;">

    <div style="width:500px;margin-left:400px; border:thick;">
        <div style="width:350px; background-color:black; color:white; text-align:center;">Occupation Details</div>
        <table style="width:350px;">
            <tr>
                <td>
                    Occupation Name
                </td>
                <td>
                    @Html.DisplayFor(m => m.OccupationName)
                </td>
            </tr>
            <tr>
                <td>
                    Status
                </td>
                <td>
                    @(Model.Status ? "Active" : "In-Active")
                </td>
            </tr>
            <tr>
                <td>
                    @Model.OccupationName Persons
                </td>
                <td>
                    @(db.persons.Where(x => x.OccupationId == Model.occupid).Count())
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.occupid }) |
                    @Html.ActionLink("View Persons", "PersonsByOccupationId", new { id = Model.occupid })
                </td>
                <td>
                    @Html.ActionLink("Back", "Index")
                </td>
            </tr>
        </table>

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>