
<link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menudiv" style="margin-top:73px;">
    @Html.Partial("_Menus")
</div>
<div style="margin-top:130px;">
    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <ul class="entry_panel" style="width: 500px; margin-top:50px">
            <li>
                <h3>Delete Occupation</h3><h2>@ViewBag.OccupationName</h2>
            </li>
            <li>
                <h4>Are you sure you want to delete this Occupation?</h4>
            </li>
            <li>
                <button class="button" type="submit">Yes</button>
                @Html.ActionLink("No", "Index", null, new { @class = "button" })
            </li>
        </ul>
    }
</div>