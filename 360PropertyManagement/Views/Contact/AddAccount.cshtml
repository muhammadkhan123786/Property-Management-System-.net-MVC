@model _360PropertyManagement.ViewModels.AccountViewModel
@using _360PropertyManagement.Models;

<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/MySite.css" rel="stylesheet" />
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div style="margin-top:-50px;">
    @Html.Partial("_PublicMenus")
</div>


@using (Html.BeginForm("AddAccount", "Contact",
FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary();
 
    <div class="main-wrap" style="margin-top:20px;">
        <div class="reset-head1">Create a new account</div>

        <div class="child-main1">

            <div class="form-group">
                Email*


                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.AccountEmailId, new { @class = "form-control" })
                </div>
                <div style="font-size:medium;">
                    @Html.ValidationMessageFor(x => x.AccountEmailId)
                </div>
            </div>
            <div class="form-group">
                Password*
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.AccountPassword, new { @class = "form-control" })
                </div>
                <div style="font-size:medium;">
                    @Html.ValidationMessageFor(x => x.AccountPassword)
                </div>
            </div>
            <div class="form-group">
                Repeat Password*
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.AccountConfirmPassword, new { @class = "form-control" })
                </div>
                <div style="font-size:medium;">
                    @Html.ValidationMessageFor(x => x.AccountConfirmPassword)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" style="background-color:black;" value="Register" />
                </div>
            </div>

        </div>

        <div class="child-main">
            By having a password you will have access to My ads where you can: <br /> <br />
            Edit or Delete your Ads<br />
            Check responses for your Ads<br />
            See saved Ads<br /><br />
            Provide your e-mail address & password and click confirm link in e-mail which will be sent to you..
        </div>

    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
